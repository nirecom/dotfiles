root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,tsx,js,jsx,json,css,scss,yml}]
indent_size = 2

[{*.yml,*.json,*.template,*.less,*.coffee}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
